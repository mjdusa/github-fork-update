            "name": "Run github-fork-update",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/github-fork-update/main.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": ["-auth=${env:GITHUB_AUTH}"],
            "showLog": true,
        },
        {
            "name": "Debug github-fork-update in verbose",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/github-fork-update/main.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": ["-auth=${env:GITHUB_AUTH}", "-debug", "-verbose"],
            "showLog": true,
        },
        {
            "name": "Run github-fork-update in verbose",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/github-fork-update/main.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": ["-auth=${env:GITHUB_AUTH}", "-verbose"],
            "showLog": true,
        }
    ]
